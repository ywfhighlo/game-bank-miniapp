.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.quote-card {
  background: #fff;
  flex: 1;
  width: 100%;
  position: relative;
  transition: transform 0.3s ease;
}

.quote-card.show-actions {
  transform: translateX(-200rpx);
}

.calendar-header {
  background-color: #6B66FF;
  color: #fff;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  border-radius: 24rpx;
  margin: 20rpx;
}

.date-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.date {
  font-size: 72rpx;
  font-weight: bold;
}

.date-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.lunar-date {
  font-size: 32rpx;
  opacity: 0.95;
}

.weekday {
  font-size: 28rpx;
  opacity: 0.9;
}

.historical-event {
  font-size: 24rpx;
  opacity: 0.85;
  line-height: 1.4;
  margin-top: 10rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.activity-section {
  display: flex;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}

.yi-icon {
  width: 80rpx;
  height: 80rpx;
  background: #6B66FF;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 30rpx;
}

.activity {
  font-size: 36rpx;
  color: #333;
}

.quote-content {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  background: #fff;
  flex: 1;
}

.quote-text {
  font-size: 36rpx;
  color: #333;
  line-height: 1.6;
}

.quote-text-en {
  font-size: 32rpx;
  color: #666;
  line-height: 1.5;
}

.swipe-hint {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
  background: #fff;
}

/* 侧边操作按钮 */
.action-buttons {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 20rpx;
  padding: 20rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-buttons.show {
  opacity: 1;
}

.action-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #6B66FF;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-text {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.hidden-canvas {
  position: fixed;
  left: -2000rpx;
  visibility: hidden;
}

/* 添加上下滑动动画效果 */
@keyframes slideInUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

@keyframes slideOutDown {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(-100%);
  }
}

.slide-in {
  animation: slideInUp 0.3s ease-out;
}

.slide-out {
  animation: slideOutDown 0.3s ease-out;
}