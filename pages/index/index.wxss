.user-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.user-nickname {
  font-size: 32rpx;
  color: var(--text-color);
}

.game-time-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 24rpx;
  color: var(--secondary-color);
  margin-bottom: 10rpx;
}

.value {
  font-size: 36rpx;
  color: var(--text-color);
  font-weight: bold;
}

.menu-list {
  width: 100%;
  background: #fff;
  margin: 20rpx 0;
}

.menu-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.mood-icon {
  background-color: #9c27b0;
}
.sport-icon {
  background-color: #3cc51f;
}
.game-icon {
  background-color: #1296db;
}
.countdown-icon {
  background-color: #ff9933;
}
.quote-icon {
  background-color: #ff0000;
}
.menu-text {
  flex: 1;
  display: flex;
  align-items: center;
}
.menu-text text {
  font-size: 34rpx;
  color: #333;
}
.arrow {
  color: #b2b2b2;
  font-family: "SimSun";
  margin-left: 8rpx;
}
.sport-records {
  width: 100%;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
}
.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.record-item:last-child {
  border-bottom: none;
}
.sport-type {
  font-size: 28rpx;
  color: var(--text-color);
}
.sport-duration {
  font-size: 28rpx;
  color: var(--primary-color);
}
.sport-time {
  font-size: 24rpx;
  color: var(--secondary-color);
}
.empty-records {
  text-align: center;
  padding: 40rpx 0;
  color: var(--secondary-color);
}
.record-list {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.record-type, 
.record-duration, 
.record-time {
  font-size: 28rpx;
  color: var(--text-color);
}

/* 新增倒计时样式 */
.countdown-card {
  width: 100%;
  margin: 20rpx 0;
  padding: 30rpx;
  background: linear-gradient(135deg, #1296db, #3cc51f);
  border-radius: 16rpx;
}

.countdown-content {
  display: flex;
  justify-content: center;
  align-items: center;
}

.countdown-text {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}
