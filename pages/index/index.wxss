.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.welcome-text {
  font-size: 32rpx;
  color: #333;
}

.balance-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance-title {
  font-size: 28rpx;
  color: #666;
}

.balance-value {
  font-size: 36rpx;
  color: #3cc51f;
  font-weight: bold;
}

.records-section {
  background-color: #fff;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.record-item {
  padding: 10rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
  font-size: 28rpx;
  color: #333;
}

.record-item:last-child {
  border-bottom: none;
}

.no-data {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  padding: 20rpx 0;
}

.btn-primary {
  background-color: #3cc51f;
  color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 32rpx;
  width: 80%;
  margin: 0 auto;
  display: block;
}

.user-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.user-nickname {
  font-size: 32rpx;
  color: var(--text-color);
}

.game-time-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 24rpx;
  color: var(--secondary-color);
  margin-bottom: 10rpx;
}

.value {
  font-size: 36rpx;
  color: var(--text-color);
  font-weight: bold;
}

.action-buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
}

.action-buttons button {
  width: 45%;
}

.sport-records {
  width: 100%;
}

.sport-type {
  font-size: 28rpx;
  color: var(--text-color);
}

.sport-duration {
  font-size: 28rpx;
  color: var(--primary-color);
}

.sport-time {
  font-size: 24rpx;
  color: var(--secondary-color);
}

.empty-records {
  text-align: center;
  padding: 40rpx 0;
  color: var(--secondary-color);
}

.record-list {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.record-type, 
.record-duration, 
.record-time {
  font-size: 28rpx;
  color: var(--text-color);
}
