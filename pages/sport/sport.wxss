.container { 
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
  height: 100vh;
}
.header { 
  margin-bottom: 30px;
  text-align: center;
}
.title { 
  font-size: 24px; 
  font-weight: bold; 
  color: #333;
}
.sub-title { 
  font-size: 16px;
  color: #666;
  margin-bottom: 15px;
  text-align: center;
}
.form { 
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
  margin-bottom: 40rpx;
}
.input { 
  width: 80%;
  height: 44px;
  padding: 0 15px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  background: #fff;
  margin-bottom: 40rpx;
}
.btn-primary { 
  width: 80%;
  height: 44px;
  background: #07c160;
  color: white;
  border-radius: 8px;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.btn-primary:active { 
  opacity: 0.8;
}
.verification {
  margin-top: 20px;
  width: 80%;
}
.message {
  margin-top: 20px;
  padding: 10px 20px;
  color: #666;
  font-size: 14px;
  text-align: center;
  background: #f8f8f8;
  border-radius: 4px;
  width: 80%;
}