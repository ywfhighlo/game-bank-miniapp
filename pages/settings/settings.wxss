.settings-container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-top: 20rpx;
}

.settings-list {
  background-color: #fff;
}

.settings-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.version {
  font-size: 28rpx !important;
  color: #999 !important;
  text-align: right;
  margin-right: 20rpx;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: rotate(45deg);
}

.logout-button {
  margin: 60rpx 30rpx;
  background-color: #fff;
  height: 88rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-button text {
  color: #ff4d4f;
  font-size: 32rpx;
}
