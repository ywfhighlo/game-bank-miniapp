.container { 
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f8f8f8;
  padding: 20rpx;
}
.header { 
  text-align: center; 
  margin-bottom: 20rpx; 
}
.title { 
  font-size: 32rpx; 
  font-weight: bold; 
}
.info { 
  text-align: center; 
  margin-bottom: 20rpx; 
}
.label { 
  font-size: 28rpx; 
}
.value { 
  font-size: 32rpx; 
  color: var(--primary-color); 
}
.timer {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.btn-primary { 
  background-color: #3cc51f; 
  color: #fff; 
  padding: 20rpx; 
  border: none; 
  border-radius: 8rpx; 
  width: 80%;
  text-align: center;
}
.message {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  padding: 10rpx;
}

/* 添加滑动动画样式 */
.slide-left-animation {
  transform: translateX(-100%);
  opacity: 0;
  transition: all 0.25s ease-out;
}

.slide-right-animation {
  transform: translateX(100%);
  opacity: 0;
  transition: all 0.25s ease-out;
} 