.container { 
  padding: 20rpx; 
}
.profile-header { 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  margin-bottom: 20rpx; 
}
.avatar { 
  width: 120rpx; 
  height: 120rpx; 
  border-radius: 50%; 
  margin-bottom: 10rpx; 
}
.nickname { 
  font-size: 32rpx; 
  color: #333; 
}
.profile-content { 
  text-align: center; 
}
.btn-secondary { 
  background-color: #fff; 
  color: #3cc51f; 
  border: 1rpx solid #3cc51f; 
  padding: 20rpx; 
  border-radius: 8rpx; 
  width: 100%;
} 