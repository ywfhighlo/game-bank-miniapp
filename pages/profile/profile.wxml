<view class="profile-container">
  <!-- 用户信息区域 -->
  <view class="user-info">
    <block wx:if="{{!hasUserInfo}}">
      <button class="btn-login" bindtap="onLogin">登录</button>
    </block>
    <block wx:else>
      <view class="user-header">
        <image class="user-avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
        <view class="user-detail">
          <text class="user-name">{{userInfo.nickName}}</text>
          <text class="wechat-id">手机号：{{helperPhone || '未设置'}}</text>
        </view>
      </view>
    </block>
  </view>

  <!-- 菜单列表 -->
  <view class="menu-list">
    <view class="menu-item">
      <view class="menu-icon phone-icon"></view>
      <text>帮手手机号码</text>
      <input class="menu-input" placeholder="请输入帮手手机号码" type="number" bindinput="onInputHelper" value="{{helperPhone}}" />
      <button class="btn-save" bindtap="saveHelperPhone">保存</button>
    </view>
    
    <view class="menu-item">
      <view class="menu-icon sms-icon"></view>
      <text>测试短信</text>
      <button class="btn-test" bindtap="sendTestSMS">发送测试</button>
    </view>

    <view class="menu-item">
      <view class="menu-icon settings-icon"></view>
      <text>设置</text>
      <text class="arrow"></text>
    </view>
  </view>

  <view class="message">{{message}}</view>
</view>