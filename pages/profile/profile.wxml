<view class="container">
  <view class="user-info">
    <block wx:if="{{!hasUserInfo}}">
      <button class="btn-primary" bindtap="onLogin">登录</button>
    </block>
    <block wx:else>
      <image class="user-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="user-nickname">{{userInfo.nickName}}</text>
      <button class="btn-logout" bindtap="logout">退出登录</button>
    </block>
  </view>
  <view class="header">
    <text class="title">个人资料</text>
  </view>
  <view class="form">
    <text class="label">帮手手机号码</text>
    <input class="input" placeholder="请输入帮手手机号码" type="number" bindinput="onInputHelper" value="{{helperPhone}}" />
    <button class="btn-primary" bindtap="saveHelperPhone">保存号码</button>
  </view>
  <view class="message">{{message}}</view>
  <view class="sms-test">
    <button class="btn-secondary" bindtap="sendTestSMS">发送测试短信</button>
  </view>
</view>