.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.mood-card {
  background: #fff;
  flex: 1;
  width: 100%;
  position: relative;
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
}

.mood-card.show-actions {
  transform: translateX(-200rpx);
}

.mood-content {
  flex: 1;
  margin: 30rpx;
  padding: 40rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 30rpx;
  transition: all 0.3s ease;
}

.mood-icon {
  font-size: 120rpx;
  line-height: 1;
}

.mood-type {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.mood-quote {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  margin-top: 20rpx;
}

.swipe-hint {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
  background: #fff;
}

/* 侧边操作按钮 */
.action-buttons {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 20rpx;
  padding: 20rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-buttons.show {
  opacity: 1;
}

.action-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #6B66FF;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-text {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.hidden-canvas {
  position: fixed;
  left: -2000rpx;
  visibility: hidden;
}

/* 添加上下滑动动画效果 */
@keyframes slideInUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slideOutDown {
  from {
    transform: translateY(0);
    opacity: 1;
  }
  to {
    transform: translateY(-100%);
    opacity: 0;
  }
}

.slide-in {
  animation: slideInUp 0.3s ease-out;
}

.slide-out {
  animation: slideOutDown 0.3s ease-out;
}