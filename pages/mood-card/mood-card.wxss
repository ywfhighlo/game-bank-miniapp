.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f8f9fa;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.date {
  font-size: 36rpx;
  color: #666;
}

.mood-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 20rpx;
}

.mood-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  width: calc(20% - 16rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.mood-item.selected {
  background: #e6f7ff;
  border: 2rpx solid #1890ff;
  transform: scale(1.05);
}

.mood-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.mood-text {
  font-size: 24rpx;
  color: #666;
}

.style-list {
  display: flex;
  gap: 20rpx;
  overflow-x: auto;
  padding: 10rpx 0;
}

.style-item {
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  white-space: nowrap;
  transition: all 0.3s ease;
}

.style-item.selected {
  border: 2rpx solid #1890ff;
  transform: scale(1.05);
}

.content-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.word-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
}

.mood-card {
  width: 100%;
  min-height: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 40rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.mood-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(to bottom, rgba(255,255,255,0.1), transparent);
  pointer-events: none;
}

.card-header {
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.card-date {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  position: relative;
  z-index: 1;
}

.mood-icon.large {
  font-size: 80rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.content-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  text-align: center;
  margin-top: 20rpx;
  padding: 0 40rpx;
}

.card-footer {
  margin-top: 40rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.watermark {
  font-size: 24rpx;
  color: #999;
  opacity: 0.8;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  flex-wrap: wrap;
}

.btn {
  flex: 1;
  min-width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  background: #fff;
  color: #333;
  border: 2rpx solid #ddd;
  padding: 0 30rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.btn:active {
  transform: scale(0.98);
}

.btn.primary {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: #fff;
  border: none;
}

.hidden {
  display: none;
}

.hidden-canvas {
  position: fixed;
  left: -9999px;
  visibility: hidden;
}

/* 添加页面切换动画 */
.card-editor, .mood-card {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 