<view class="container">
  <swiper class="mood-swiper" bindchange="onSwiperChange" vertical="true" current="{{currentMoodIndex}}" circular="true">
    <swiper-item wx:for="{{moods}}" wx:key="type" class="mood-item">
      <view class="mood-card" style="background-color: {{item.color}}">
        <view class="mood-icon">{{item.icon}}</view>
        <view class="mood-text">{{item.text}}</view>
        <view class="mood-message">{{item.message}}</view>
      </view>
    </swiper-item>
  </swiper>
  
  <view class="hint-text">上下滑动切换心情</view>
  
  <view class="action-buttons">
    <button class="share-btn" bindtap="onShareTap">分享心情</button>
    <button class="save-btn" bindtap="onSaveTap">保存记录</button>
  </view>
</view> 