<view class="container" 
      bindtouchstart="touchStart" 
      bindtouchmove="touchMove" 
      bindtouchend="touchEnd">
  <view class="mood-card {{showActions ? 'show-actions' : ''}}">
    <view class="mood-content" animation="{{animation}}" style="background: {{currentMood.color}}20">
      <view class="mood-icon">{{currentMood.icon}}</view>
      <view class="mood-type">{{currentMood.type}}</view>
      <view class="mood-quote">{{currentMood.quote}}</view>
    </view>

    <view class="swipe-hint">
      <text>上下滑动切换 · 左右滑动显示操作</text>
    </view>
  </view>

  <!-- 侧边操作按钮 -->
  <view class="action-buttons {{showActions ? 'show' : ''}}">
    <button class="action-btn save-btn" bindtap="onLongPress">
      <text class="btn-text">保存相册</text>
    </button>
    <button class="action-btn share-btn" open-type="share">
      <text class="btn-text">分享好友</text>
    </button>
  </view>

  <!-- 用于生成分享图片的canvas -->
  <canvas type="2d" id="moodCanvas" class="hidden-canvas"
    style="width: 300px; height: 400px;">
  </canvas>
</view>