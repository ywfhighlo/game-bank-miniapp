.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.countdown-card {
  background: linear-gradient(135deg, #6B66FF 0%, #4B7BF5 100%);
  width: 100%;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(107, 102, 255, 0.2);
  margin: 40rpx 0;
  position: relative;
  overflow: hidden;
}

.countdown-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
  z-index: 1;
}

.holiday-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 2;
}

.countdown-number {
  font-size: 160rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  line-height: 1.2;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  position: relative;
  z-index: 2;
}

.countdown-label {
  font-size: 36rpx;
  color: rgba(255,255,255,0.9);
  text-align: center;
  margin-top: 10rpx;
  position: relative;
  z-index: 2;
}

.holiday-info {
  margin-top: 30rpx;
  text-align: center;
  color: rgba(255,255,255,0.9);
  font-size: 28rpx;
  position: relative;
  z-index: 2;
}

.holiday-date {
  color: #fff;
  font-weight: bold;
}

.next-holiday {
  margin-top: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  background: #fff;
  padding: 20rpx 40rpx;
  border-radius: 100rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

/* 励志日历卡片样式 */
.inspiration-card {
  background: linear-gradient(135deg, #FF9966 0%, #FF5E62 100%);
  width: 100%;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 94, 98, 0.2);
  margin: 40rpx 0;
  position: relative;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.daily-quote {
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.food-recommendation {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

.motivation-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  margin-top: 20rpx;
  font-style: italic;
}

/* 滑动动画 */
.slide-up {
  transform: translateY(-100%);
  opacity: 0;
}

.slide-down {
  transform: translateY(100%);
  opacity: 0;
}

/* 渐变背景色数组 */
.bg-color-1 { background: linear-gradient(135deg, #6B66FF 0%, #4B7BF5 100%); }
.bg-color-2 { background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%); }
.bg-color-3 { background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%); }
.bg-color-4 { background: linear-gradient(135deg, #9C27B0 0%, #E91E63 100%); }
.bg-color-5 { background: linear-gradient(135deg, #2196F3 0%, #03A9F4 100%); }

/* 动画效果 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
  100% {
    transform: scale(1);
  }
}

.pulse {
  animation: pulse 2s infinite ease-in-out;
}