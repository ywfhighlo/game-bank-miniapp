.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a237e, #311b92);
  position: relative;
  overflow: hidden;
  padding: 40rpx;
}

/* 烟花动画 */
.fireworks-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.fireworks-canvas {
  width: 100%;
  height: 100%;
}

/* 主要内容区域 */
.countdown-section {
  position: relative;
  z-index: 2;
  text-align: center;
  padding: 60rpx 0;
}

.holiday-type {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
  margin-bottom: 40rpx;
}

.countdown-display {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.time-block {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
  text-align: center;
  min-width: 120rpx;
}

.number {
  font-size: 64rpx;
  color: #fff;
  font-weight: bold;
  display: block;
  line-height: 1.2;
}

.unit {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.time-separator {
  font-size: 64rpx;
  color: #fff;
  font-weight: bold;
  margin-top: -20rpx;
}

.target-date {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 20rpx;
}

/* 装饰元素 */
.decoration-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1;
}

.lantern {
  position: absolute;
  width: 60rpx;
  height: 80rpx;
  background: #ff4d4f;
  border-radius: 30rpx;
  box-shadow: 0 0 20rpx rgba(255, 77, 79, 0.6);
  animation: swing 3s ease-in-out infinite;
}

.lantern.left {
  top: 100rpx;
  left: 60rpx;
}

.lantern.right {
  top: 100rpx;
  right: 60rpx;
}

.cloud {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.cloud-1 {
  width: 200rpx;
  height: 100rpx;
  top: 200rpx;
  left: -100rpx;
  animation: floatCloud 15s linear infinite;
}

.cloud-2 {
  width: 300rpx;
  height: 150rpx;
  bottom: 300rpx;
  right: -150rpx;
  animation: floatCloud 20s linear infinite reverse;
}

/* 设置按钮 */
.settings-section {
  position: relative;
  z-index: 2;
  margin-top: 60rpx;
}

.setting-btn {
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  backdrop-filter: blur(10px);
}

/* 假期信息 */
.holiday-info {
  position: relative;
  z-index: 2;
  margin-top: 60rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

.info-value {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

/* 动画 */
@keyframes swing {
  0%, 100% {
    transform: rotate(-5deg);
  }
  50% {
    transform: rotate(5deg);
  }
}

@keyframes floatCloud {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(200%);
  }
}

/* 页面切换动画 */
.container {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
} 