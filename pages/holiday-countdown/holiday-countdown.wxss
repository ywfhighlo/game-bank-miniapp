.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  padding-top: 0;
}

.holiday-swiper {
  width: 100%;
  height: auto;
  flex: 1;
}

.holiday-item {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  width: 100%;
  padding: 0;
  box-sizing: border-box;
}

.holiday-card {
  width: 90%;
  height: 90%;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.holiday-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(to bottom, rgba(255,255,255,0.2), transparent);
  pointer-events: none;
}

.holiday-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.holiday-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.countdown-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.days {
  font-size: 60rpx;
  font-weight: bold;
  color: #FF4500;
  margin: 0 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.date-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.holiday-message {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  line-height: 1.6;
  padding: 0 20rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #999;
  margin: 30rpx 0;
}

.action-buttons {
  width: 100%;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.share-btn, .remind-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  border: none;
}

.share-btn {
  background: #3cc51f;
  color: #fff;
}

.remind-btn {
  background: #fff;
  color: #3cc51f;
  border: 2rpx solid #3cc51f;
}

/* 烟花动画 */
.fireworks-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.fireworks-canvas {
  width: 100%;
  height: 100%;
}

/* 主要内容区域 */
.countdown-section {
  position: relative;
  z-index: 2;
  text-align: center;
  padding: 0;
  width: 100%;
  box-sizing: border-box;
  margin-top: 40rpx;
}

.holiday-type {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin: 0 0 20rpx 0;
}

.countdown-card {
  width: 100%;
  margin: 20rpx 0;
  padding: 30rpx;
  background: linear-gradient(135deg, #1296db, #3cc51f);
  border-radius: 16rpx;
  box-sizing: border-box;
}

.countdown-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.countdown-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  animation: pulse 2s infinite;
  text-align: center;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
  max-width: 100%;
  padding: 0 20rpx;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.countdown-display {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #E3F2FD;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 0 20rpx 20rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.time-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  min-width: 100rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin: 0 8rpx;
}

.number {
  font-size: 44rpx;
  color: #333;
  font-weight: bold;
  line-height: 1;
}

.unit {
  font-size: 20rpx;
  color: #666;
  margin-top: 4rpx;
}

.time-separator {
  font-size: 44rpx;
  color: #999;
  margin: 0 2rpx;
  line-height: 1;
  padding-bottom: 20rpx;
}

.target-date {
  font-size: 24rpx;
  color: #666;
  margin: 8rpx 0;
}

/* 装饰元素 */
.decoration-container {
  display: none;
}

.holiday-info {
  margin: 20rpx;
  background: #E3F2FD;
  border-radius: 16rpx;
  padding: 16rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  color: #333;
  font-size: 28rpx;
}

.info-value {
  color: #666;
  font-size: 28rpx;
}

/* 动画 */
@keyframes swing {
  0%, 100% {
    transform: rotate(-5deg);
  }
  50% {
    transform: rotate(5deg);
  }
}

@keyframes floatCloud {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(200%);
  }
}

/* 页面切换动画 */
.container {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 设置按钮样式调整 */
.setting-btn {
  margin: 10rpx 0;
  padding: 10rpx 30rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  color: #666;
}