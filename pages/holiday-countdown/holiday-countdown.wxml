<view class="container">
  <!-- 添加背景图案 -->
  <view class="pattern"></view>
  
  <!-- 添加装饰圆形 -->
  <view class="decoration decoration-1"></view>
  <view class="decoration decoration-2"></view>

  <view class="countdown-section">
    <view class="holiday-type">{{holidayType}}倒计时</view>
    <view class="countdown-display">
      <text class="countdown-text">{{countdown}}</text>
    </view>
  </view>

  <view class="settings-section">
    <button class="setting-btn" bindtap="showDatePicker">
      <text>设置假期时间</text>
    </button>
  </view>

  <view class="holiday-info">
    <view class="info-item">
      <text class="info-label">寒假开始时间</text>
      <text class="info-value">{{holidayDates.winterStart}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">暑假开始时间</text>
      <text class="info-value">{{holidayDates.summerStart}}</text>
    </view>
  </view>
</view> 